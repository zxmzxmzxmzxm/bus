/* pages/updatePassenger/index.wxss */
page{
  font-size: 28rpx;
  background-color: #f1f1f1;
}
.fillT{
  line-height: 70rpx;
  color: #666;
  margin-left: 40rpx;
}
.ticket-info{
  padding: 0 40rpx;
  background-color: #fff;
}
.ticket-info-list{
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.ticket-info-icon{
  width: 48rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
.carPhone{
  margin-top: 20rpx;
}
.BuyBus-list{
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #f3f3f3;
}
.inputBox{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.BuyBus-input{
  width: 450rpx;
  text-align: right;
}
.editIcon{
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
}
.save{
  width: 90%;
  background-color: #5099ff;
  color: #fff;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  margin-top: 60rpx;
}
